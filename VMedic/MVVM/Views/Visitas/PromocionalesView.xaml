<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="VMedic.MVVM.Views.Visitas.PromocionalesView"
                  xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
                  Background="#60000000"
                  CloseWhenBackgroundIsClicked="False">

    <Grid VerticalOptions="Center">
        <Frame Margin="15"
               BorderColor="Black">
            <VerticalStackLayout>
                <Label Text="Promocionales"
                       FontSize="18"
                       FontAttributes="Bold"
                       VerticalOptions="Center"
                       HorizontalOptions="Center" />
                <Label x:Name="doctor_nombre"
                       Text="2395 - Zulma Dalia Sosa Carcamo"
                       HorizontalTextAlignment="Center"
                       FontAttributes="Bold"
                       TextColor="Blue"
                       Margin="0,10" />
                <Label Text="Seleccione un material:"
                       FontSize="12" />
                <Frame x:Name="frame_materiales"
                       BackgroundColor="White"
                       BorderColor="{StaticResource Accent}"
                       Padding="20,2.5"
                       Margin="0,0,0,15"
                       CornerRadius="4">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Materiales_Tapped" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Picker x:Name="SelectMateriales"
                                Title="{x:Null}"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                HeightRequest="45"
                                FontSize="12"
                                HorizontalOptions="Fill"
                                TextColor="Black" />
                        <Image HorizontalOptions="End">
                            <Image.Source>
                                <FontImageSource FontFamily="Icon"
                                                 Glyph="&#xE806;"
                                                 Size="20"
                                                 Color="{StaticResource Gray500}" />
                            </Image.Source>
                        </Image>
                    </Grid>
                </Frame>
                <Button x:Name="Enviar_material"
                        Text="Enviar"
                        Margin="50,0"
                        Clicked="Enviar_material_Clicked" />
            </VerticalStackLayout>
        </Frame>
        <ImageButton Source="close.png"
                     HeightRequest="50"
                     WidthRequest="50"
                     Padding="10"
                     HorizontalOptions="End"
                     VerticalOptions="Start"
                     Margin="15"
                     Clicked="Close_Clicked" />
    </Grid>
</mopups:PopupPage>
